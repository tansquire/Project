#include <SoftwareSerial.h>

SoftwareSerial mySerial(9, 10);
String str="";
void setup()
{
  mySerial.begin(9600);   // Setting the baud rate of GSM Module  
  Serial.begin(9600);    // Setting the baud rate of Serial Monitor (Arduino)
  delay(100);
  SendMessage();
  DeleteMessage();
}


void loop()
{
  if (Serial.available()>0)
   switch(Serial.read())
  {
    case 's':
      SendMessage();
      break;
    case 'r':
      RecieveMessage();
      break;
  }

smstask();

}

void smstask()
{

if (mySerial.available()>0)
{
String str=(String)mySerial.readString();
int bra = str.indexOf('@');
int ket = str.indexOf('#');
String str1=str.substring(bra+1,ket);

if(str1=="server")
{
Serial.println(str);
int i=random(1,500);
String str2=(String)i;
String str3="@deviceA#"+str2;
mySerial.println("AT+CMGF=1");    //Sets the GSM Module in Text Mode
delay(1000);  // Delay of 1000 milli seconds or 1 second
mySerial.println("AT+CMGS=\"+917602304567\"\r"); // Replace x with mobile number
delay(1000);
mySerial.println(str3);// The SMS text you want to send
delay(100);
mySerial.println((char)26);// ASCII code of CTRL+Z
delay(1000);
mySerial.println("AT+CMGD=1,4"); // AT Command to receive a live SMS
delay(5000);
}

//else if(str1=="paul")
//{
//Serial.println(str);
//int i=random(1,500);
//String str2=(String)i;
//String str3="paul"+str2;
//mySerial.println("AT+CMGF=1");    //Sets the GSM Module in Text Mode
//delay(1000);  // Delay of 1000 milli seconds or 1 second
//mySerial.println("AT+CMGS=\"+917602304567\"\r"); // Replace x with mobile number
//delay(1000);
//mySerial.println(str3);// The SMS text you want to send
//delay(100);
//mySerial.println((char)26);// ASCII code of CTRL+Z
//delay(1000);
//}

}
else
return;
}


 void SendMessage()
{
  mySerial.println("AT+CMGF=1");    //Sets the GSM Module in Text Mode
  delay(1000);  // Delay of 1000 milli seconds or 1 second
  mySerial.println("AT+CMGS=\"+917602304567\"\r"); // Replace x with mobile number
  delay(1000);
  mySerial.println("I am SMS from GSM Module");// The SMS text you want to send
  delay(100);
   mySerial.println((char)26);// ASCII code of CTRL+Z
  delay(1000);
}


 void RecieveMessage()
{
  //mySerial.println("AT+CMGF=1"); 
  mySerial.println("AT+CNMI=2,2,0,0,0"); // AT Command to receive a live SMS
  delay(1000);
 }

 void DeleteMessage()
{
  //mySerial.println("AT+CMGF=1"); 
  mySerial.println("AT+CMGD=1,4"); // AT Command to receive a live SMS
  delay(9000);
}
